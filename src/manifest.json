{
  "name": "Xverse Wallet",
  "description": "A Bitcoin Wallet for Web3",
  "manifest_version": 3,
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/img/xverse_icon.png",
    "default_title": "Xverse Wallet"
  },
  "chrome_url_overrides": {},
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "devtools_page": "devtools.html",
  "web_accessible_resources": [{ "resources": ["inpage.js"], "matches": ["*://*/*"] }],
  "host_permissions": ["*://*/*"],
  "permissions": ["scripting", "contextMenus", "storage"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; frame-src 'none'; frame-ancestors 'none';"
  },
  "content_scripts": [
    {
      "js": ["content-script.js"],
      "matches": ["*://*/*"],
      "all_frames": true
    }
  ]
}
