{
  "name": "Xverse Wallet",
  "description": "A Bitcoin Wallet for Web3",
  "manifest_version": 3,
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "xverse_icon.png",
    "default_title": "Xverse Wallet"
  },
  "chrome_url_overrides": {},
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; frame-src 'none'; frame-ancestors 'none';"
  },
  "permissions": ["storage"],
  "background": {},
  "icons": {
    "128": "xverse_icon.png"
  },
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": ["xverse_icon.png"],
      "matches": []
    }
  ]
}
